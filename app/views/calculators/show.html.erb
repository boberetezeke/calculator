<div class="main">
  <div class="calculator">
    <%= form_for @calculator do |f| %>
      <div>
        <%= @calculator.accumulator %> <%= @calculator.current_operation.present? ? "| #{@calculator.current_operation}" : "" %>
      </div>
      <div>
        <%= f.text_field :current_entry %>
      </div>
      <div>
        <%= button_tag "clear", name: "key", value: "clear" %>
        <%= link_to("tape", results_path(calculator_id: @calculator.id)) %>
      </div>
      <div>
        <%= button_tag "1", name: "key", value: "1" %>
        <%= button_tag "2", name: "key", value: "2" %>
        <%= button_tag "3", name: "key", value: "3" %>
        <%= button_tag "+", name: "key", value: "+" %>
      </div>
      <div>
        <%= button_tag "4", name: "key", value: "4" %>
        <%= button_tag "5", name: "key", value: "5" %>
        <%= button_tag "6", name: "key", value: "6" %>
        <%= button_tag "-", name: "key", value: "-"  %>
      </div>
      <div>
        <%= button_tag "7", name: "key", value: "7"  %>
        <%= button_tag "8", name: "key", value: "8"  %>
        <%= button_tag "9", name: "key", value: "9"  %>
        <%= button_tag "*", name: "key", value: "*"  %>
      </div>
      <div>
        <%= button_tag "=", name: "key", value: "=" %>
        <%= button_tag "0",   name: "key", value: "0"  %>
        <%= button_tag ".",   name: "key", value: "."  %>
        <%= button_tag "/",   name: "key", value: "/"  %>
      </div>
    <% end %>
  </div>  
</div>
